{
    "root": "./",
    "title": "蔚蓝触点Wiki站",
    "head_title": "蔚蓝触点Wiki站",
    "head_description": "蔚蓝触点Wiki站",
    "head_keywords": "蔚蓝触点,Wiki",
    "logo": "./images/logo.png",

    "gitbook": ">= 3.0.0",

    "language": "zh-hans",

    "plugins": [
        "-sharing",
        "-fontsettings",
        "-lunr",
        "-search",
        "-search-pro",
        "-theme-official",
        "-sitemap-general",
        "-theme-gestalt", 
        "-theme-default", 
        "-styles-sass-fix",
        "theme-fexa"
    ],

    "variables": {
        "themeFexa":{
            "nav":[
                {
                    "url":"http://...",
                    "target":"_blank",
                    "name": "简易教程"
                }
            ]
        },
    },
    
    "pluginsConfig": {
        "sitemap-general": {
            "prefix": "https://wiki.azpro.cn/"
        },
        "theme-gestalt": {
            "logo": "/images/logo.png",
            "favicon": "/images/favicon.ico",
            "baseUrl": null,
            "excludeDefaultStyles": false,
            "doNotHideChildrenChapters" : false
        },
        "theme-fexa": {
            "search-placeholder":"输入关键字搜索", //搜索框提示信息
            "logo":"./logo.png", //logo地址
            "favicon": "./favicon.ico" //ico地址
        }
    },
    
    "styles": {
        "website": "./styles/website.scss"
    }
}
